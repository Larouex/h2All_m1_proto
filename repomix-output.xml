                </Badge>
                <Badge bg={isLoading ? "warning" : "success"}>
                  {isLoading ? "Loading" : "Ready"}
                </Badge>
                {user?.isAdmin && <Badge bg="primary">Admin User</Badge>}
              </div>

              {user && (
                <div>
                  <small className="text-muted d-block">
